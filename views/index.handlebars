<div class="container">

  <div class="row" id="top-row">

    {{!-- <div class="col"></div> --}}

    <div class="col">
      
      <h2>Welcome to Good Burger, Home of the Good Burger</h2> 
      <h3>May I take your Order?</h3>

      <img class="img-fluid img-responsive" src="../public/assets/img/Good_Burger.jpg" alt="Good Burger">

    </div>

    {{!-- <div class="col"></div> --}}

  </div>

  <div class="row">

    <div class="col-2"></div>

    <div class="col-4" id="to-be-eaten">

      <h4>Burgers To Eat:</h4>

      <br>
    
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block }}
            
          {{/unless}}
        {{/each}}
      </ul>

    </div>
    
    <div class="col-4" id="eaten">

      <h4>Burgers Already Eaten:</h4>

      <br>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block }}
          {{/if}}
        {{/each}}
      </ul>
    
    </div>

    <div class="col-2"></div>

  </div>

  <div class="row">

    <div class="col"></div>
    
    <div calss="col">

      <form class="create-form">

        <div class="form-group">

          <div id="burger-label">
          
            <label for="burger">Burger Name:</label>

          </div>

          <input type="text" id="burger" name="burger_name">

        </div>

        <div id="burger-button">
          
          <button type="submit" class="btn btn-lg btn-success button-space">Submit</button>

        </div>

        <br>

        <p> Enter a burger that you would like to eat and Click the "Submit" button </p>

      </form>

    </div>
    
    <div class="col"></div>

  </div>

</div>

<div class="container">

  <div class="row">

    <div class="col"></div>

    <div class="col">
      
      <h1>Eat A Burger</h1>

    </div>

    <div class="col"></div>

  </div>

  <div class="row">

    <div class="col-2"></div>

    <div class="col-4">
    
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block }}
            
          {{/unless}}
        {{/each}}
      </ul>

    </div>
    
    <div class="col-4">

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block }}
          {{/if}}
        {{/each}}
      </ul>
    
    </div>

    <div class="col-2"></div>

  </div>

  <div class="row">

    <div class="col"></div>
    
    <div calss="col">

      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <button type="submit">Submit</button>
        <p> Enter a burger that you would like to eat and Click the "Submit" button </p>

      </form>

    </div>
    
    <div class="col"></div>

  </div>

</div>
